<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>Replace placeholders in a text with the values of the given object</Description>
    <Copyright>MIT License</Copyright>
    <Authors>Frederik van Lierde</Authors>
    <Company />
    <PackageProjectUrl>https://github.com/frederikvanlierde/CodeHelper.Core.PlaceHolder</PackageProjectUrl>
    <PackageIcon>CodeHelper-Logo.jpg</PackageIcon>
    <ApplicationIcon>CodeHelper-Logo.ico</ApplicationIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/frederikvanlierde/CodeHelper.Core.PlaceHolder</RepositoryUrl>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageVersion>6.1.0.0</PackageVersion>
    <RepositoryType>git</RepositoryType>
    <AssemblyVersion>6.1.0.0</AssemblyVersion>
    <FileVersion>6.1.0.0</FileVersion>
    <Version>6.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="CodeHelper-Logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\CodeHelper-Logo.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="LICENSE.txt" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
